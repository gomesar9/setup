#!/bin/bash

# TODO: Definir headphonme dinamicamente
headphone='alsa_output.usb-C-Media_Electronics_Inc._USB_Audio_Device-00.analog-stereo'
hdmi='alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__hw_sofhdadsp_3__sink'
notebook='alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__hw_sofhdadsp__sink'

audio="$1"

case "$audio" in
u)
  audio="$headphone"
  ;;
h)
  audio="$hdmi"
  ;;
n)
  audio="$notebook"
  ;;
*)
  echo 'Option not found'
  exit 1
  ;;
esac

pacmd set-default-sink "$audio"
